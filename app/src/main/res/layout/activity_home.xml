<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeActivity">
    <TextView
        android:id="@+id/text_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/splash_regular"
        android:text="@string/home_page"
        android:textSize="36sp"
        android:textColor="@color/new_black"
        android:textAlignment="center"
        android:layout_marginBottom="36dp"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homepage_username"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/princess_sofia_regular"/>
    <ImageView
        android:id="@+id/homepage_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/dashboard"
        android:layout_margin="24dp"/>
    <TextView
        android:id="@+id/homepage_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_home"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bad"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:src="@drawable/face_sad"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rectangle_red"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/happy"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/face_happy"
            android:background="@drawable/rectangle_green"/>
    </LinearLayout>


</LinearLayout>